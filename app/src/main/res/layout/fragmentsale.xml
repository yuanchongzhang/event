<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="预约卖车" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_tianxie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/xianshibackground"


            android:text="填写信息" />

        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_below="@+id/text_tianxie"
            android:layout_marginRight="10dp"
            android:background="@drawable/homesearchbackground"
            android:layout_marginTop="10dp"
            android:hint="姓名"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:textColor="#e1e1e1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/telephone_edittext"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_below="@+id/edittext_name"
            android:layout_marginRight="10dp"
            android:background="@drawable/homesearchbackground"
            android:layout_marginTop="10dp"
            android:hint="手机号"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:textColor="#e1e1e1"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请留下您的联系方式,我们将有专人和您联系"
            android:layout_below="@+id/telephone_edittext"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/xianshibackground"


            android:text="卖车流程" />

        <RelativeLayout
            android:id="@+id/fillinlayout"
            android:layout_below="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/text_process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jumptopurse"

                />

            <TextView
                android:id="@+id/text_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写信息"
                android:layout_toRightOf="@+id/text_process"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12333333333"
                android:layout_toRightOf="@+id/text_process"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/text_information"
                />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/zhijianlayout"
            android:layout_below="@+id/fillinlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
            <ImageView
                android:id="@+id/receive_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jumptopurse"

                />

            <TextView
                android:id="@+id/zhijiantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写信息"
                android:layout_toRightOf="@+id/receive_img"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12333333333"
                android:layout_toRightOf="@+id/receive_img"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/zhijiantext"
                />


        </RelativeLayout>




        <RelativeLayout
            android:layout_below="@+id/zhijianlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_goin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/jumptopurse"

                />

            <TextView
                android:id="@+id/goinfamily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写信息"
                android:layout_toRightOf="@+id/img_goin"
                android:layout_marginTop="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12333333333"
                android:layout_toRightOf="@+id/img_goin"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/goinfamily"
                />


        </RelativeLayout>

